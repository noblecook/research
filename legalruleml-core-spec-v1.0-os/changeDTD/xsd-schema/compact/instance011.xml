    <!-- #################  -->
    <!-- Category 1 PreFix  -->  
    <!-- #################  -->
    
    
    <Prefix refID="pre100"/>
            
    

    <!-- ###################  -->
    <!-- Category 2 Metadata  -->   
    <!-- ###################  -->
    
    <!-- 
        LegalSources capture IRI based sources.  The attribute refID annotates x
        and refIDSystemName annotates the naming convention 
    -->   
    <LegalSources>
        <LegalSource key="lsref01cfr312.5" 
            sameAs="https://www.ecfr.gov/current/title-16/chapter-I/subchapter-C/part-312/section-312.5">
        </LegalSource>
    </LegalSources>
    
    <!--
        References capture non-IRI based sources.  The attribute refID annotates x
        and attribute refIDSystemName annotates the naming convention 
    -->   
    <References>
        <Reference refersTo="lsref02" 
            refID="/us/USCODE/eng@/main#title16-sec312.5" 
            refIDSystemName="AkomaNtoso2.0.2012-10">
        </Reference>
    </References>
    
    <!-- 
        Legal texts are often amended as a society or judicial system evolves. 
        Norms and rules are valid in a particular interval of time and with respect 
        to three main legal axes: when they come into force (entry), when they 
        effect the intended or desired result (efﬁcacy), and when they apply (applicability). 
        In this section, we model the external temporal dimensions of the norms 
        (e.g., when the norm is valid) and not the temporal dimensions of the complex events 
        that are the content of the textual provision (e.g., when a person is to present 
        a tax application).
    -->
    <Times>
        <ruleml:Time key=":t1">
            <ruleml:Data xsi:type="xm:dateTime">1998-10-21T00:00:00</ruleml:Data>
        </ruleml:Time>
    </Times>
    
    <TemporalCharacteristics>
        <TemporalCharacteristic>
            <forStatus iri="&amp;lrmlv;#Efficacious"/>
            <hasStatusDevelopment iri="&amp;lrmlv;#Starts"/>
            <atTime keyref="#t1"/>
        </TemporalCharacteristic>
        <TemporalCharacteristic>
            <forStatus iri="&amp;lrmlv;#Efficacious"/>
            <hasStatusDevelopment iri="&amp;lrmlv;#End"/>
            <atTime keyref="#t2"/> 
            
        </TemporalCharacteristic>
    </TemporalCharacteristics>
    
    <!-- 
        An Agent is an entity that acts or has the capability to act. An Agent could be a 
        physical person, a database, or a bot; for this reason we have the sub-element <lrml:hasType> 
        that expresses the category of agent.  In general, the agent is usually the AUTHOR of the 
        rule model and can act in a particular function (e.g. congresswoman or senator)
    -->       
    <Agents>
        <Agent key="aut1" sameAs="Richard Bryan (D-NV)"></Agent>
    </Agents>
    
    <!--
        Authorities qualiﬁes the rules with respect to the authenticity of the provenance 
        of the formal model. Authority is a person or organization with the power to create, 
        endorse, or enforce Legal Norms.
    -->   
    <Authorities>
        <Authority key="Senate" sameAs="https://www.senate.gov/"/>
    </Authorities>
    
    <Jurisdictions>
        <Jurisdiction key="US" sameAs="https://www.whitehouse.gov/"/>
    </Jurisdictions>
    
    
    <!-- #######################  -->
    <!-- Category 3 Associations  -->
    <!-- #######################  -->
    
    <!-- 
        To avoid redundancy, we have the element <lrml:Association>, which can be used to group
        meta information referred to several rules or portions of them. In the following example, 
        we have two associations inside of the element <lrml:Associations>.Here we link the regulatory 
        sources/references to the rules, thus implementing the N:M  relationship.  For one source to 
        many rules, we have 1 source and 7 rules: 
    -->
    <Associations key="assoc01">
        <Association>
            <appliesSource keyref="#lsref01.cfr312.5"/>
            <toTarget keyref="#rule1"/>
            <toTarget keyref="#rule2"/>
            <toTarget keyref="#rule3"/>
            <toTarget keyref="#rule4"/>
            <toTarget keyref="#rule5"/>
            <toTarget keyref="#rule6"/>
            <toTarget keyref="#rule7"/>
        </Association>
        <Association>
            <appliesTemporalCharacteristic keyref="#tblock1"/>
            <toTarget keyref="#ps1"/>
            <toTarget keyref="#ps2"/>
        </Association>
        <Association>
            <appliesAuthority keyref="#congress"/>
            <appliesJurisdiction keyref="#us"/>
            <toTarget keyref="#ps1"/>
            <toTarget keyref="#ps2"/>
        </Association>
        <Association>
            <appliesModality iri="/ontology/deontic"/>
            <appliesSource keyref="#section-312.5"/>
            <appliesStrength iri="/ontology/defeasible"></appliesStrength>
        </Association>
    </Associations>
    
    <Associations key="assoc02">
        <Association>
            <appliesSource keyref="#lsref02.Ako.2012-10" />
        </Association>
    </Associations>
    
    
    
    
    
    
    
